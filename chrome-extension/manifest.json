{
  "manifest_version": 3,
  "name": "AI Video Notes Generator",
  "version": "1.0",
  "description": "One-click to generate structured notes from YouTube videos.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.bilibili.com/video/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}