{
  "manifest_version": 3,
  "name": "AI 视频笔记助手",
  "version": "1.3.0",
  "description": "一键生成视频的AI笔记，并固定在侧边栏方便查阅。",


  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],

  "host_permissions": [
    "http://localhost:8080/*",
    "*://*.bilibili.com/video/*",
    "*://*.youtube.com/*"
  ],


  "action": {

    "default_icon": "icon.png",
    "default_title": "打开/关闭 AI 笔记侧边栏"
  },


  "side_panel": {
    "default_path": "popup.html"
  },

  "icons": {
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}